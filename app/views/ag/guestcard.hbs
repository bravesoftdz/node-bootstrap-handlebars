            <input id="g_id" type="text" class="form-control" name="g_id" disabled placeholder="id" value="{{g_id}}">


        </div>

        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="g_name" type="text" class="form-control" name="g_name" placeholder="Name" value="{{g_name}}">
        </div>
