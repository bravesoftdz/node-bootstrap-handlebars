        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
            <input id="g_code" type="number" min="0" class="form-control" name="g_code" placeholder="Code" value="{{g_code}}">
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <input id="g_email" type="email" class="form-control" name="g_email" placeholder="Email" value="{{g_email}}">
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
            <input id="g_phone" type="phone" class="form-control" name="g_phone" placeholder="Phone" value="{{g_phone}}">
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
            <textarea id="g_address" name="g_address" placeholder="Address" class="form-control" rows="5">{{g_address}}</textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
            <textarea id="g_comment" name="g_comment" placeholder="Comment" class="form-control" rows="5">{{g_comment}}</textarea>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Create Guest</button>
        </div>


    </form>

</div>
